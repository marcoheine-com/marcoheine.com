---
interface Props {
  active?: boolean
  href: string
  size?: 'small' | 'default'
}
const { active = false, href, size = 'default' } = Astro.props
---

<a
  href={href}
  class={`cta cta--${size} ${active ? 'cta--active' : ''}`}
>
  <slot />
</a>

<style>
  .cta {
    display: inline-block;
    padding: 12px 16px;
    margin-top: var(--cta-margin-top, 16px);
    position: relative;
    border-radius: 24px;
    left: -4px;
    bottom: 4px;
    box-shadow: 2px 2px 0 0 var(--primaryColorOne);
    border: 2px solid var(--primaryColorOne);
    text-decoration: none;
    transition:
      outline 0.1s,
      transform 0.3s cubic-bezier(0.5, 2.5, 0.7, 0.7),
      background-color 0.1s,
      color 0.1s,
      box-shadow 0.3s cubic-bezier(0.5, 2.5, 0.7, 0.7);

    &:focus-visible {
      outline-offset: 4px;
      outline: 4px solid var(--primaryColorTwo);
    }
  }

  .cta--small {
    padding: 4px 8px;
  }

  .cta:hover,
  .cta:focus-visible,
  .cta--active {
    box-shadow: none;
    transform: translate(2px, 2px);
    background-color: var(--primaryColorTwo);
    color: var(--white);
  }
</style>
