---
const { href } = Astro.props
---

<a
  href={href}
  class="cta"
>
  <slot />
</a>

<style>
  .cta {
    display: inline-block;
    padding: 12px 16px;
    margin-top: var(--cta-margin-top, 16px);
    transition: outline 0.1s;
    position: relative;
    color: var(--white);
    background-color: var(--primaryColorTwo);

    &:after {
      transition: all 0.2s ease-out;
      display: block;
      content: '';
      width: 100%;
      height: 100%;
      position: absolute;
      left: 7%;
      top: 15%;
      background-color: var(--primaryColorOne);
      z-index: -1;
    }
    &:focus-visible {
      outline-offset: 4px;
      outline: 4px solid var(--primaryColorTwo);
    }
    &:focus-visible,
    &:hover {
      &::after {
        top: 0;
        left: 0;
      }
    }
  }
</style>
