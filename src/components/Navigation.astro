---
import '../styles/global.css'
---

<nav class="nav">
  <ul class="nav__list">
    <li class="nav__list-item">
      <a
        class="nav__link"
        href="/"
      >
        Home
      </a>
    </li>
    <li>
      <a
        class="nav__link"
        href="/blog"
        >Blog</a
      >
    </li>
    <li class="nav__list-item">
      <a
        class="nav__link"
        href="/about"
        >About</a
      >
